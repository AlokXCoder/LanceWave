rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }

    match /users/{uid} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == uid;
      allow update, delete: if isSignedIn() && request.auth.uid == uid;
    }

    match /tasks/{taskId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.ownerUid == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.ownerUid == request.auth.uid;

      match /bids/{bidId} {
        allow read: if isSignedIn();
        // Bidder can create their own bid
        allow create: if isSignedIn() && request.resource.data.bidderUid == request.auth.uid;
        // Bidder can update/delete their own bid content (optional):
        allow update, delete: if isSignedIn() && resource.data.bidderUid == request.auth.uid;
        // Task owner can update bid status only
        allow update: if isSignedIn() && get(/databases/$(database)/documents/tasks/$(taskId)).data.ownerUid == request.auth.uid
                      && request.resource.data.diff(resource.data).changedKeys().hasOnly(['status']);
      }
    }
  }
} 